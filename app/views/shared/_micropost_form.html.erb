<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost.", id: "micropost_text_area" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary", id: "submit_micropost_button" %>
<% end %>
